# SSH ZSH ALIASES


# navigation shortcuts
alias ,="cd -"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
export zrc=~/ssh-env/zsh-profile-ssh
export vrc=~/ssh-env/vimrc-ssh

# built-ins aliases
alias du1='du -sh'
alias g='git'
alias hist='history'
alias pe='printenv'
alias rmf='rm -f'
alias rsync='rsync -havz --stats'
alias srz='source ~/.zshrc'
alias t='tmux'
alias ta='tmux attach'
alias vi='vim'

# 3rd-party aliases
alias fd='fd -i'
alias ipy='ipython'
alias la='exa -a --color=always'
alias ll='exa -lah --color=always'
alias ls='exa --color=always'
alias rg='rg --smart-case'
alias v='f -e vim'    # fasd quick file open with vim
alias vv='sf -e vim'  # 'v' but interactive

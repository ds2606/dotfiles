[user]
    name = Daniel Schreck
    email = daniel.s.schreck@gmail.com
[init]
    defaultBranch = main
[alias]
    a     = add
    aa    = add .
    ai    = add -i
    amend = commit --amend
    b     = branch
    c     = commit
    cam   = commit -am
    cat   = cat-file -p
    cl    = clean -i
    co    = checkout
    cp    = cherry-pick
    d     = diff
    da    = diff HEAD
    dl    = diff HEAD~ HEAD
    ds    = diff --staged
    f     = fetch
    h     = help
    l     = log --oneline --graph -10
    la    = log --oneline --graph --all -10
    ll    = log --oneline --graph --all
    ld    = log --oneline --graph -p
    lb    = log --oneline --graph
    last  = log -1 HEAD
    mg    = merge
    mgt   = mergetool
    r     = remote
    rb    = rebase
    rl    = reflog -10
    rs    = restore
    rt    = reset
    rv    = revert
    s     = status
    sh    = show
    ss    = status -s
    st    = stash
    sw    = switch
    unstage  = restore --staged --
    # submodule aliases, from pro-git 7.11 (Submodules)
	smpush   = push --recurse-submodules=on-demand
	smupdate = submodule update --remote --merge
	smdiff   = !git diff && git submodule foreach 'git diff'
[core]
    excludesfile = ~/.dotfiles/.gitignore_global
    editor = vim
    pager = less
[pretty]
    line = "%C(auto)%h %<|(60,trunc)%s %C(green)%ad%C(auto)%d"
    detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ad%n %C(auto)%d%n"
[merge]
    tool = vimdiff
[mergetool]
    keepBackup = false
[pull]
	ff = only
[push]
	default = simple
# installed by git-lfs
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f


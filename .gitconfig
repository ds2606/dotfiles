[user]
    name = Daniel Schreck
    email = daniel.s.schreck@gmail.com
[init]
    defaultBranch = main
[alias]
    a        = add
    aa       = add -A
    ai       = add -i
    amend    = commit --amend
    amno     = commit --amend --no-edit
    b        = branch
    bl       = blame
    c        = commit
    cam      = commit -am
    cat      = cat-file -p
    churn    = ! git log --all -M -C --name-only --format='format:' "$@" | \
                 sort | grep -v '^$' | uniq -c | sort -n
    cl       = clean
    co       = checkout
    cp       = cherry-pick
    d        = diff
    da       = diff HEAD
    dl       = diff HEAD~ HEAD
    ds       = diff --staged
    f        = fetch
    h        = help
    last     = log -1 HEAD
    mg       = merge
    mgt      = mergetool
    pfwl     = push --force-with-lease
    r        = remote
    rb       = rebase
    rl       = reflog -10
    s        = status
    sh       = show
    ss       = status -s
    st       = stash
    sw       = switch
    t        = tag
    unstage  = reset HEAD --
    wt       = worktree
[core]
    excludesfile = ~/.dotfiles/.gitignore_global
    editor = vim
	pager = diff-so-fancy | less --tabs=4 -RF
[diff]
	mnemonicprefix = true
[pretty]
    line = "%C(auto)%h %<|(60,trunc)%s %C(green)%ad%C(auto)%d"
    detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ad%n %C(auto)%d%n"
[advice]
	detachedHead = false
[merge]
    tool = vimdiff
[mergetool]
    keepBackup = false
[pull]
	ff = only
[push]
	default = simple
[color "diff-highlight"]
	oldNormal = 161 bold
	oldHighlight = 211 bold 52
	newNormal = 114 bold
	newHighlight = 114 bold 22
[color "diff"]
	meta = 153
	frag = 209 bold
	func = 219 bold
	commit = 141  ; 220 nice as well
	old = 161
	new = 114
	whitespace = 204 reverse
[color]
	ui = true
[interactive]
	diffFilter = diff-so-fancy --patch

# ZSH ALIASES


# safe environment
set -o noclobber
alias rm='rm -i'         # Prompt before removing files via 'rm'
alias cp='cp -i'         # Prompt before overwriting files via 'cp'
alias mv='mv -i'         # Prompt before overwriting files via 'mv'
alias ln='ln -i'         # Prompt before overwriting files via 'ln'

# navigation shortcuts
alias ,="cd -"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
export zrc=~/.dotfiles/.zsh_profile
export vrc=~/.dotfiles/.vimrc

# built-ins aliases
alias srz='source ~/.zshrc'
alias rmf='rm -f'
alias hist='history'
alias vi='vim'
alias gs='git status'
alias gb='git branch'
alias gc='git checkout'
alias gcb='git checkout -b'

# 3rd-party aliases
alias python='python3'
alias pydoc='pydoc3'
alias pyman='pydoc3'
alias ipy='ipython'
alias ll='exa -lah --color=always'
alias ls='exa --color=always'
alias la='exa -a --color=always'
alias grep='ggrep --color=auto' # GNU grep as default
alias fd='fd -i'
alias rg='rg --smart-case'
alias trash='trash -F'
alias moo='fortune | cowsay | lolcat'
alias v='sf -e vim'

# application shortcuts
alias chrome='open -a Google\ Chrome'
alias finder='open -a Finder'

# enable help command for builtin manpages
if [[ $(which run-help) == "run-help: aliased to man" ]]; then
    autoload -Uz run-help
    unalias run-help
    alias help=run-help
fi


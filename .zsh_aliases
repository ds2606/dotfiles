# ZSH ALIASES


# safe environment
set -o noclobber
alias rm='rm -i'         # Prompt before removing files via 'rm'
alias cp='cp -i'         # Prompt before overwriting files via 'cp'
alias mv='mv -i'         # Prompt before overwriting files via 'mv'
alias ln='ln -i'         # Prompt before overwriting files via 'ln'

# navigation
alias ,="cd -"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
export zrc=~/.dotfiles/.zsh_profile
export vrc=~/.dotfiles/.vimrc
cs=~/desktop/home/cs
dots=~/.dotfiles
alias myth='ssh myth'

# built-ins
alias cl='clear'
alias du1='du -sh'
alias g='git'
alias hist='history'
alias mirror='wget -r -p -E -l inf -k -np'
alias pe='printenv'
alias rmf='rm -f'
alias rsync='rsync -havz --stats'
alias srz='source ~/.zshrc'
alias stat='gstat'
alias t='tmux'
alias ta='tmux attach'
alias tn='tmux new-session'
alias vi='vim'

# 3rd-party
alias bd='batdiff'
alias fd='fd -i'
alias grep='ggrep --color=auto' # GNU grep as default
alias htop='htop-vim'
alias ipy='ipython'
alias la='exa -a --color=always'
alias ll='exa -lah --color=always'
alias ls='exa --color=always'
alias moo='fortune | cowsay | lolcat'
alias pydoc='pydoc3'
# alias python='/usr/local/bin/python3'  # homebrew managed python
alias rg='rg --smart-case'
alias trash='trash -F'
alias v='f -e vim'  # fasd quick file open with vim
alias vv='sf -e vim'  # 'v' but interactive

# gui applications
alias chrome='open -a Google\ Chrome'
alias finder='open -a Finder'

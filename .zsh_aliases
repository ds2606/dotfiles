# ZSH ALIASES


# Safe environment
set -o noclobber
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ln='ln -i'

# Navigation
alias ,="cd -"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Built-ins
alias cl='clear'
alias du1='du -sh'
alias e='echo'
alias grep='ggrep --color=auto'  # GNU grep as default
alias hist='history'
alias mirror='wget -m -p -E -k -np'
alias pe='printenv'
alias rmf='rm -f'
alias se='source ~/.zshrc'  # source environment
alias stat='gstat'
alias w='which'

# 3rd-party
alias bd='batdiff'
alias htop='htop-vim'
alias ipy='ipython --profile=dschreck'
alias la='exa -a'
alias ll='exa -la'
alias ls='exa'
alias g='git'
alias moo='fortune | cowsay | lolcat'
alias myth='ssh myth'
alias pg='pgcli'
alias rg='rg --smart-case'
alias rsync='rsync -havz --stats'
alias trash='trash -F'
alias v='fasd -fe vim'  # fasd quick file open with vim
alias vv='fasd -ife vim'  # 'v' but interactive
alias t='tmux'
alias ta='tmux attach -t mbp'
alias ti='tmux_nested'
alias tn='tmux new-session -As mbp'
alias myip4='curl -s -4 ifconfig.co'
alias myip6='curl -s -6 ifconfig.co'
ipgeo() { curl -s http://ipwhois.app/json/$1?objects=ip,success,message,country,country_code,region,city | jq }
tree() { /usr/bin/env tree -C $@ | less }

# GUI applications
alias chrome='open -a Google\ Chrome'
alias finder='open -a Finder'

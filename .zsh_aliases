# ZSH ALIASES


# safe environment
set -o noclobber
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ln='ln -i'

# navigation
alias ,="cd -"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
export zrc=~/.dotfiles/.zsh_profile
export vrc=~/.dotfiles/.vimrc
export cs=~/desktop/home/cs
export dots=~/.dotfiles

# suffix defaults
alias -s py='python3'
alias -s html='open -a Google\ Chrome'
alias -s pdf='open'

# built-ins
alias cl='clear'
alias du1='du -sh'
alias g='git'
alias grep='ggrep --color=auto'  # GNU grep as default
alias hist='history'
alias mirror='wget -m -p -E -k -np'
alias pe='printenv'
alias rmf='rm -f'
alias rsync='rsync -havz --stats'
alias srz='source ~/.zshrc'
alias stat='gstat'
alias t='tmux'
alias ta='tmux attach -t mbp'
alias ti='tmux_nested'
alias tn='tmux new-session -As mbp'
alias vi='vim'
alias w='which'

# 3rd-party
alias bd='batdiff'
alias fd='fd -i'
alias htop='htop-vim'
alias ipy='ipython --profile=dschreck'
alias la='exa -a --color=always'
alias ll='exa -la --color=always'
alias ls='exa --color=always'
alias moo='fortune | cowsay | lolcat'
alias rg='rg --smart-case'
alias trash='trash -F'
alias v='fasd -fe vim'  # fasd quick file open with vim
alias vv='fasd -ife vim'  # 'v' but interactive
alias myip4='curl -4 ifconfig.co'
alias myip6='curl -6 ifconfig.co'

# gui applications
alias chrome='open -a Google\ Chrome'
alias finder='open -a Finder'

# ZSH PROMPT


source ~/.zsh/git-prompt.zsh/git-prompt.zsh
source ~/.dotfiles/colors/pn-palette.sh && pn_colors 256

# set left prompt
PROMPT='%B%F{69}%1~ ❯%f%b '

# set right prompt
RPROMPT='$(gitprompt)'

# customize git prompt
ZSH_GIT_PROMPT_SHOW_UPSTREAM="no"
ZSH_THEME_GIT_PROMPT_PREFIX=""
ZSH_THEME_GIT_PROMPT_SUFFIX=""
ZSH_THEME_GIT_PROMPT_SEPARATOR=" "
ZSH_THEME_GIT_PROMPT_DETACHED="%{$fg_bold[cyan]%}:"
ZSH_THEME_GIT_PROMPT_BRANCH='%F{$c[ice]}'
ZSH_THEME_GIT_PROMPT_UPSTREAM_SYMBOL="%{$fg_bold[yellow]%}⟳ "
ZSH_THEME_GIT_PROMPT_UPSTREAM_PREFIX="%{$fg[red]%}(%{$fg[yellow]%}"
ZSH_THEME_GIT_PROMPT_UPSTREAM_SUFFIX="%{$fg[red]%})"
ZSH_THEME_GIT_PROMPT_BEHIND='%B%F{$c[ice]} ⇣'
ZSH_THEME_GIT_PROMPT_AHEAD='%B%F{$c[ice]} ⇡'
ZSH_THEME_GIT_PROMPT_UNMERGED="%{$fg[red]%}✖"
ZSH_THEME_GIT_PROMPT_STAGED='%B%F{118}●'
ZSH_THEME_GIT_PROMPT_UNSTAGED='%B%F{221}●'
ZSH_THEME_GIT_PROMPT_UNTRACKED='%B%F{204}●'
ZSH_THEME_GIT_PROMPT_STASHED="%{$fg[blue]%}⚑"
ZSH_THEME_GIT_PROMPT_CLEAN='%B%F{118}✔'

#remove 'colors' function from working environment
unset -f colors

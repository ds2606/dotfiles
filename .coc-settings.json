{
    "python.jediEnabled": false,
    "suggest.autoTrigger": "none",
    "diagnostic.displayByAle": true,
    "languageserver": {
        "ccls": {
            "disableDiagnostics": true,
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                  "directory": "/tmp/ccls"
                }
            }
        }
    }
}
